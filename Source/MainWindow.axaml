<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Source.MainWindow"
        Title="Interview Copilot"
        Width="950" Height="650"
        Background="#1E1E1E"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0" Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,15" BoxShadow="0 4 10 0 #000000">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                <!-- FIXED LINE BELOW: Removed {Binding} and just set a default color -->
                <Border Width="12" Height="12" CornerRadius="6" Background="Gray" Name="MicIndicator"/>
                <TextBlock Name="StatusText" Text="Ready (Press Space)" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: RESUME INPUT -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="8" Margin="0,0,10,0" Padding="10">
                <TextBox Name="ResumeBox" Watermark="Paste Resume/Job Description Here..." 
                         Background="Transparent" BorderThickness="0" 
                         AcceptsReturn="True" TextWrapping="Wrap" Foreground="LightGray"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </Border>

            <!-- RIGHT: TRANSCRIPT & ANSWER -->
            <Border Grid.Column="1" Background="#252526" CornerRadius="8" Padding="15">
                <ScrollViewer>
                    <StackPanel>
                        <!-- FIXED: Used &amp; -->
                        <TextBlock Text="LIVE TRANSCRIPT &amp; ANSWER" Foreground="Gray" FontSize="10" Margin="0,0,0,10"/>
                        <TextBlock Name="TranscriptBlock" Text="[Waiting for audio...]" 
                                   Foreground="#00FFFF" TextWrapping="Wrap" FontSize="16" LineHeight="24"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>